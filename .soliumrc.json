{
  "extends": "solium:all",
  "plugins": [
    "security"
  ],
  "rules": {
    "arg-overflow": 0,
    "indentation": [
      "error",
      2
    ],
    "max-len": [
      "error",
      160
    ],
    "operator-whitespace": [
      "error"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "security/no-block-members": [
      "error",
      [
        "blockhash"
      ]
    ]
  }
}
